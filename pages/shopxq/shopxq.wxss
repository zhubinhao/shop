/* pages/shopxq/shopxq.wxss */
image{
  width: 100%;
}
.content{
  min-height: 60px;
  width: 100%;
  background-color: white;
}
.content view{
  line-height: 30px;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  
}
.content text{
  color: red;
}
.foot{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 60px;
  width: 100%;
  background-color: white;
  display: flex;
}
.foot >view{
  flex: 1;
  text-align: center;
}
.foot view:last-child{
 background-color: red;
 color: white;
 line-height: 60px;
}
.foot view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.foot image{
  width: 30px;
  height: 30px;
}
.foot text{
  margin-top: 5px;
   font-size: 12px;
}
.foot button{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: white;
}
button::after{
  border: none;
}