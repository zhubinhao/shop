/* pages/me/me.wxss */
.user-head{
  border-top: 1px solid gainsboro;
  height: 70px;
  border-bottom: 1px solid gainsboro;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  background-color: white;
}
.user-head image{
  height: 50px;
  width: 50px;
  border-radius: 50%;
  margin-right: 10px;
  margin-top: 10px;
}
.user-head text{
  margin-left: 10px;
  line-height: 65px;
  font-size: 32rpx;
}
.user-dingdan{
  background-color: white;
  margin-top: 6px;
  height: 95px;
  position: relative;
}
.user-dingdan >view:first-child{
  /* height: 18px; */
   border-bottom: 1px solid gainsboro; 
  display: flex;
   justify-content: space-between; 
  padding: 5px 10px;
}
.user-dingdan >view:first-child image{
  position:absolute;
  z-index: 99;
  top:3px;
  right: 5px;
   width: 25px;height: 25px;
}
.user-dingdan image{
  width: 30px;
  height: 30px;
}
.user-dingdan >view:last-child{
  padding: 0 20px;
  display: flex;
  justify-content: space-between;
}
.user-imgs{
  display: flex;
  flex-direction: column;
  margin-top: 10px;
}
.user-imgs text{
  margin-left: -3px;
  font-size: 14px;
}
.user-more{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 65px;
  background-color: white;
  margin-top: 6px; 
  justify-content: space-around;
  font-size: 14px;
}
.user-list{
  width: 100%;
  background-color: white;
  margin-top: 6px;
}
.user-list view{
  width: 100%;
  height: 40px;
  border-bottom: 1px solid gainsboro;
  display: flex;
  justify-content: space-between;
}
.user-list view text{
  line-height: 40px;
  margin-left: 10px;
}
.top{
   margin-top: 17px; 
  margin-right: 10px;
  width: 10px;
  height: 10px;

}
.top1{
 margin-top: 8px

}
.lefts{
  width: 13px;
  height: 13px
}
.user-IMG{
  display: flex;
  flex-direction: column;
  margin-top: 10px;

}
.user-more >view image{
   width: 30px;height: 30px;margin-left: 8px;
}
 .user-more >view:nth-child(2) image{
  margin-left: 16px ;
} 
.user-more >view:nth-child(1) image{
  margin-left: 10px ;
} 