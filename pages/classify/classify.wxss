.left{
  position: fixed;
  left: 0;
  top:0;
  width: 80px;
  height: 100%;
  background-color: white;
  border-right: 1px solid #F0F0F0;

}
.left view{
  width: 80px;
  height: 40px;
  border-bottom: 1px solid #F0F0F0;
  text-align: center;
  line-height: 40px;
}
.active{
  color: red;
  background-color: #F0F0F0;
}
.right{
  margin-left: 80px;
}
.head{
  width: 100%;
  height: 100px;
}
.content{
  display: flex;
}
.content view{
  width: 33%;
  height: 100px;
  padding: 10px;
  
  text-align: center;
}

.cont-img{
  width:100%;
  height: 80px
